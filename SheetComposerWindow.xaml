<Window x:Class="YourNamespace.SheetComposerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Organizador de Pranchas" Height="600" Width="800">
		<Window.Resources>
				<Style TargetType="Border" x:Key="ViewFrameStyle">
						<Setter Property="BorderBrush" Value="#FF0078D7"/>
						<Setter Property="BorderThickness" Value="1"/>
						<Setter Property="Background" Value="#E6F0F7"/>
						<Setter Property="CornerRadius" Value="3"/>
						<Setter Property="Padding" Value="5"/>
						<Style.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
										<Setter Property="BorderBrush" Value="#FF005499"/>
										<Setter Property="Background" Value="#C7E0F7"/>
								</Trigger>
						</Style.Triggers>
				</Style>
		</Window.Resources>
		
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Lista de vistas disponíveis -->
        <StackPanel Grid.Column="0" Margin="5">
            <Label Content="Vistas Disponíveis" FontWeight="Bold"/>
            <ListBox x:Name="AvailableViewsList" 
                     DisplayMemberPath="Name"
                     PreviewMouseLeftButtonDown="AvailableViews_PreviewMouseLeftButtonDown"
                     Height="300"/>

            <Label Content="Pranchas" FontWeight="Bold" Margin="0,10,0,0"/>
            <ComboBox x:Name="SheetsComboBox" DisplayMemberPath="SheetNumber"/>
            <Button Content="Nova Prancha" Click="CreateNewSheet_Click" Margin="0,5"/>
        </StackPanel>

        <!-- Área de composição -->
				<Border Grid.Column="1" Margin="5" Background="#F0F0F0">
						<Canvas x:Name="SheetCompositionArea"
                    AllowDrop="True"
                    Background="White"
                    Drop="SheetCompositionArea_Drop"
                    DragOver="SheetCompositionArea_DragOver"
                    DragLeave="SheetCompositionArea_DragLeave"
                    PreviewDragEnter="SheetCompositionArea_DragEnter">

								<Rectangle Stroke="DarkGray"
                           StrokeDashArray="2 2"
                           StrokeThickness="1"
                           Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"
                           Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"/>
						</Canvas>
				</Border>

        <!-- Rodapé -->
        <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Content="Cancelar" Click="Cancel_Click" Margin="5" Width="80"/>
            <Button Content="Gerar Pranchas" Click="GenerateSheets_Click" Margin="5" Width="100"/>
        </StackPanel>
    </Grid>
</Window>